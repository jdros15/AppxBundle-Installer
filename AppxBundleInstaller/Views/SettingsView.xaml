<UserControl x:Class="AppxBundleInstaller.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019">
    
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel MaxWidth="600" Margin="0,0,0,40">
                <!-- Header -->
                <TextBlock Text="Settings" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,24" />
                
                <!-- Appearance Section -->
                <TextBlock Text="Appearance" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                           Margin="0,0,0,16" />
                
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                    <StackPanel>
                        <!-- Dark Mode Toggle -->
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Dark Mode" 
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                                <TextBlock Text="Use dark theme for the application" 
                                           FontSize="12"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           Margin="0,4,0,0" />
                            </StackPanel>
                            
                            <ui:ToggleSwitch Grid.Column="1" 
                                             IsOn="{Binding IsDarkMode, Mode=TwoWay}"
                                             OnContent=""
                                             OffContent=""
                                             VerticalAlignment="Center" />
                        </Grid>
                        
                        <Rectangle Height="1" 
                                   Fill="{DynamicResource SystemControlForegroundBaseLowBrush}" 
                                   Margin="0,16" />
                        
                        <!-- Show App Icons Toggle -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Show App Icons" 
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                                <TextBlock Text="Display application icons in the package list" 
                                           FontSize="12"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           Margin="0,4,0,0" />
                            </StackPanel>
                            
                            <ui:ToggleSwitch Grid.Column="1" 
                                             IsOn="{Binding ShowAppIcons, Mode=TwoWay}"
                                             OnContent=""
                                             OffContent=""
                                             VerticalAlignment="Center" />
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Advanced Section -->
                <TextBlock Text="Advanced" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                           Margin="0,0,0,16" />
                
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                    <StackPanel>
                        <!-- Show Critical Apps Toggle -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="âš ï¸" FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center" />
                                    <TextBlock Text="Show Critical Apps" 
                                               FontWeight="SemiBold"
                                               Foreground="#FF6B6B" />
                                </StackPanel>
                                <TextBlock TextWrapping="Wrap"
                                           FontSize="12"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           Margin="0,4,0,0">
                                    Show critical Windows system apps like Start Menu, Settings, and Shell Experience. 
                                    <Run FontWeight="SemiBold" Foreground="#FF6B6B">Uninstalling these can break Windows.</Run>
                                </TextBlock>
                            </StackPanel>
                            
                            <ui:ToggleSwitch x:Name="CriticalAppsToggle"
                                             Grid.Column="1" 
                                             IsOn="{Binding ShowCriticalApps, Mode=TwoWay}"
                                             OnContent=""
                                             OffContent=""
                                             VerticalAlignment="Center"
                                             Toggled="CriticalAppsToggle_Toggled" />
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- About Section -->
                <TextBlock Text="About" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                           Margin="0,0,0,16" />
                
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            
                            <!-- App Icon -->
                            <Border Background="{DynamicResource SystemControlHighlightAccentBrush}"
                                    CornerRadius="8"
                                    Width="48" Height="48"
                                    Margin="0,0,16,0">
                                <TextBlock Text="ðŸ“¦" FontSize="24" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" />
                            </Border>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="AppxBundle Installer" 
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                                <TextBlock Text="Version 1.0.1" 
                                           FontSize="12"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           Margin="0,2,0,0" />
                                <TextBlock Text="A modern package manager for Windows" 
                                           FontSize="12"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                    Margin="0,8,0,0" />
                                <TextBlock Text="by JD Ros" 
                                           FontSize="12"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           Margin="0,2,0,0" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
